<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Library App Menu-->
    <menuitem
        id="library_menu"
        name="Library"/>

    <!--Action to open the book list -->
    <act_window id="action_library_book" 
        name="Library Book"
        res_model="library.book"
        view_mode="tree,form"/>
        
    <!--Menu item to open the book list-->
    <menuitem id="menu_library_book"
        name="Books"
        parent="library_menu"
        action="action_library_book"/>
    

</odoo>
